<h1>Edit <%= @lacquer.name %></h1>

<%= form_for @lacquer do |f| %>
	<%= f.label :name %><br>
	<%= f.text_field :name %><br>
	<%= f.label :brand %><br>
	<%= f.collection_select :brand_id, Brand.all,:id,:name, :class => "btn" %><br>
	<%= f.label :colors %><br>
	<%= f.collection_check_boxes :color_ids, Color.all, :id, :name %><br>
	<%= f.label :finishes %><br>
	<%= f.collection_check_boxes :finish_ids, Finish.all, :id, :description %><br>

	<h3>Upload a Swatch for <%= @lacquer.name %></h3>
	<%= f.fields_for :swatches, @lacquer.swatches, :html => { :multipart => true } do |swatch_form| %>
    <p>
    <%= swatch_form.hidden_field :user_id, value: current_user.id %>
    <%= swatch_form.file_field :image %>
    </p>
  <% end %>
  <%= f.submit %>
<% end %>

<% @lacquer.swatches.each do |swatch| %>
	<%= image_tag swatch.image.url(:medium) %>
<% end %>
