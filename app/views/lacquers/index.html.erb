<div class="dropdown" style="margin-top: 25px;">
  <select id="brand-selection" class="btn-lg btn-default" style="width:55%;height:45px;">
    <option value="hasnt-been-chosen">Choose your brand</option>
    <option value="OPI">OPI</option>
    <option value="Brooklyn">Essie</option>
    <option value="Queens">Butter London</option>
    <option value="Queens">Deborah Lippmann</option>
  </select>
</div>

<div class="lacquer-dropdown dropdown btn-lg" id="opi-dropdown">
  <%= form_for(@lacquer) do |f| %>
    <%= f.collection_select :id, @opi_lacquers,:id,:name, {:prompt => "Select an OPI lacquer"}, :class => "btn-lg" %>
      <%= f.submit value: "add this polish", :class => "add-lacquer btn disabled btn-lg" %>
  <% end %>
</div>

