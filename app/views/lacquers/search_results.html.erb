<% if @results.any? %>
  <h3>Lacquers with names like '<%= @search_term %>'</h3><br>
  <div class="list-group">
  <% @results.each do |result| %>
    <a href="<%= lacquer_path(result) %>" class="search_result_item list-group-item"><%= picture_for(result) %> <%= result.brand.name %> - <%= result.name %></a>
  <% end %>
  </div>
<% else %>
  <h3>Sorry, we couldn't find any lacquers with names like '<%= @search_term %>'</h3>
<% end %>
