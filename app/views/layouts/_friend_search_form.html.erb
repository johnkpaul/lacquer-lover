<%= form_tag '/user_search', method: "get", :class => 'navbar-form navbar-left', :role => 'search' do %>
  <div class='form-group'>
    <%= text_field_tag(:search_term, nil, placeholder: 'full name or email', :class => 'form-control') %>
  </div>
  <%= submit_tag "Search", class: 'btn btn-default btn-sm', style: "display: block; width: 100%;" %>
<% end %>
